/* Definição geral do menu */
QMenu {
    background-color: black;
    border: 2px ridge #cccccc;
    border-radius: 10px;
    color: white;
}

/* Definição dos itens do menu */
QMenu::item {
    border: 6px solid black;
    border-radius: 8px;
}

/* Definição dos itens selecionados */
QMenu::item:selected {
    background-color: #0064c8;
    border: 6px solid #0064c8;
}

/* Definição do indicador de seleção */
QMenu::indicator {
    border: 8px solid transparent;
    border-radius: 11px;
    height: 6px;
    width: 6px;
}

/* Definição não selecionada */
QMenu::indicator:exclusive:unchecked {
    background-color: #202020;
}

/* Definição selecionada */
QMenu::indicator:exclusive:checked {
    background-color: white;
}

/* Definição para o spinbox da velocidade de execução */
QDoubleSpinBox {
    background-color: transparent;
    selection-background-color: transparent;
    border: 4px solid transparent;
    color: white;
}
